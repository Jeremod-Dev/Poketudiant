<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetPokeApi.Pages.ShowPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#E2E4F9">
            
            <Label Text="{Binding Nom}"
                   Margin="0,50,0,0"
                   FontSize="Title"
                   FontAttributes="Bold"
                   TextTransform="Uppercase"                   
                   TextColor="CornflowerBlue"
                   HorizontalOptions="Center"/>

            <Label Text="Caracteristique" 
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,30,0,15"/>
            <Label Text="Capacités:"
                   Margin="10,0,0,0"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Poids}"
                   HorizontalOptions="Center"/> 
            <Label Text="Type:"
                   Margin="10,0,0,0"
                   TextDecorations="Underline"/>
            <Label Text="{Binding Type}"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
